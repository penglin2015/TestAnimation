<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bac_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="提示"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@color/dedede" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:minHeight="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:text="提示信息提示" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/deLine"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/dedede" />

        <View
            android:id="@+id/blueLine"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/blue_light" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/towButtGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_butt_shape"
                android:gravity="center"
                android:padding="8dp"
                android:text="取消" />

            <TextView
                android:id="@+id/secondTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_butt_shape"
                android:gravity="center"
                android:padding="8dp"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/singleButtGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/singleTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_single_butt_shape"
                android:gravity="center"
                android:padding="8dp"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>