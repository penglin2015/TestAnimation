<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BetweenAnimationActivity">

    <ImageView
        android:id="@+id/betweenAnimationIv"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_margin="6dp"
        android:src="@mipmap/smile"/>



    <Button
        android:id="@+id/rotationChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转"/>

    <Button
        android:id="@+id/alphaChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明"/>

    <Button
        android:id="@+id/translateChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动"/>


    <Button
        android:id="@+id/scaleChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="放大缩小"/>


    <Button
        android:id="@+id/mixAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="混合动画"/>
</LinearLayout>